{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "编译客户端",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall",
				"-Wextra",
				"-O2",
				"-g",
				"client.cpp",
				"-o",
				"client"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译客户端程序"
		},
		{
			"type": "cppbuild",
			"label": "编译服务端",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall",
				"-Wextra",
				"-O2",
				"-g",
				"server.cpp",
				"-o",
				"server"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译服务端程序"
		}
	]
}